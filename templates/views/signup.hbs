{{>header}}
<div class="container">
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card card-signin my-5 mero">
                <div class="card-body">
                    <h5 class="card-title text-center">{{title}}</h5>
                    <form method="POST" action="/users/signup" class="form-signin">
                        <div class="form-label-group">
                            <input type="text" id="signupName" name="name" class="form-control" placeholder="Name"
                                required />
                            <label for="signupName">Name</label>
                        </div>

                        <div class="form-label-group">
                            <input type="text" name='email' id="signupEmail" class="form-control"
                                placeholder="Email address" required />
                            <label for="signupEmail">Email address</label>
                        </div>

                        <div class="form-label-group">
                            <input type="password" name='password' id="signupPassword" class="form-control"
                                placeholder="Password" required />
                            <label for="signupPassword">Password</label>
                        </div>

                        <div class="form-label-group">
                            <input type="password" name='confirm_password' id="signupPassword2" class="form-control"
                                placeholder="Confirm Password" required />
                            <label for="signupPassword2">Confirm Password</label>
                        </div>
                        {{#if message.err_msg}}
                        <div class="error">

                            {{message.err_msg}}

                        </div>
                        {{/if}}

                        <button id="signup" class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">
                            Sign Up
                        </button>
                        <br />
                        <span class="already">Already have an account?
                            <span class="toRegister"><a href="/users/login"> Login</a></span></span>

                        <hr class="my-4" />
                        <button class="btn btn-lg btn-google btn-block text-uppercase" type="submit">
                            <i class="fab fa-google mr-2"></i> Sign up with Google
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>