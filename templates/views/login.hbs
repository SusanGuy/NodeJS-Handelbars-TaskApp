{{>header}}
<div class="container">
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card card-signin my-5 mero">
                <div class="card-body">
                    <h5 class="card-title text-center">{{title}}</h5>
                    <form method="POST" action="/users/login" class="form-signin">
                        <div class="form-label-group">
                            <input type="email" name='email' id="loginEmail" class="form-control"
                                placeholder="Email address" required autofocus />
                            <label for="loginEmail">Email address</label>
                        </div>

                        <div class="form-label-group">
                            <input type="password" name='password' id="loginPassword" class="form-control"
                                placeholder="Password" required />
                            <label for="loginPassword">Password</label>
                        </div>
                        {{#if message.error}}
                        <div class='error'> {{message.error}}</div>

                        {{/if}}

                        {{#if message.success_msg}}
                        <div class="success">{{message.success_msg}}</div>
                        {{/if}}



                        <button id="signin" class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">
                            Sign in
                        </button>
                        <br />
                        <span class="already">Don't have an account?
                            <span class="toRegister"><a href="/users/signup">Register</a></span></span>

                        <hr class="my-4" />
                        <button class="btn btn-lg btn-google btn-block text-uppercase" type="submit">
                            <i class="fab fa-google mr-2"></i> Sign in with Google
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>