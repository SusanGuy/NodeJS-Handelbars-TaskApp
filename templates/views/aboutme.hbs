{{>header}}

<div class="container emp-profile">

    <div class="row">
        <div class="col-md-4">
            <div class="profile-img">
                {{#if user.avatar}}
                <img id='profile-pic' src="/users/{{user._id}}/photo" alt="profile">
                {{else}}

                <img id='profile-pic'
                    src="http://icons.iconarchive.com/icons/jonathan-rey/simpsons/256/Bart-Simpson-01-icon.png"
                    alt="logo">
                {{/if}}
                <form id='submit-form' action="/users/upload" method="post" enctype="multipart/form-data">
                    <div id='upload-status' class="file btn btn-lg btn-primary">


                    </div>

                </form>
            </div>
        </div>
        <div class="col-md-6">
            <div class="profile-head">
                <h5>
                    {{user.name}}
                </h5>
                <h6>
                    Web Developer and Designer
                </h6>
                <p class="proile-rating">Completed Tasks: <span>{{completedTask}}/{{totalTasks}}</span></p>
                <ul class="nav nav-tabs" id="myTab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab"
                            aria-controls="home" aria-selected="true">About</a>
                    </li>

                </ul>
            </div>
        </div>
        <div class="col-md-2">
            <a href='/users/edit' class="profile-edit-btn"> Edit Profile</a>
            <a href='/users/changepassword' class="profile-edit-btn"> Change Password</a>
            <a href='/users/delete' class="profile-delete-btn"> Delete User</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <a id='delete-button' href='/users/delete/image' class="profile-delete-btn"> Remove Photo</a>
        </div>
        <div class="col-md-8">
            <div class="tab-content profile-tab" id="myTabContent">
                <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                    <div class="row">
                        <div class="col-md-6">
                            <label>User Id</label>
                        </div>
                        <div class="col-md-6">
                            <p>{{user._id}}</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label>Name</label>
                        </div>
                        <div class="col-md-6">
                            <p>{{user.name}}</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label>Email</label>
                        </div>
                        <div class="col-md-6">
                            <p>{{user.email}}</p>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>

</div>
<script src='{{host}}/js/file-upload.js'></script>